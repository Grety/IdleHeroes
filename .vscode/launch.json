	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Simulate 100k runs and average accumulated Stars",
			"runtimeArgs": [
                "--experimental-modules",
            ],
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/docs/js/monopoly.mjs",
			"console": "integratedTerminal"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Local Simulator",
			"cwd": "${workspaceRoot}/docs",
			"runtimeArgs": [
                "--experimental-modules",
            ],
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/docs/js/server.js",
			"console": "integratedTerminal"
		}
	]
}